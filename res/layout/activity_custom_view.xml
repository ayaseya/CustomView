<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:trump="http://schemas.android.com/apk/res/com.example.customview"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    tools:context=".CustomViewActivity" >

    <com.example.customview.TrumpView
        android:layout_width="64dp"
        android:layout_height="96dp"
        android:layout_margin="5dp"
        trump:mainText="1"
        trump:subText="@string/suit2" />

    <com.example.customview.TrumpView
        android:layout_width="96dp"
        android:layout_height="128dp"
        android:layout_margin="5dp"
        trump:mainText="2"
        trump:subText="@string/suit3" />

    <com.example.customview.TrumpView
        android:layout_width="128dp"
        android:layout_height="160dp"
        android:layout_margin="5dp"
        trump:mainText="3"
        trump:subText="@string/suit4" />

</LinearLayout>